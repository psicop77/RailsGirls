<h1>Tango Music Study Guide (Golden Age)</h1>

<table class="table table-responsive table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Composer</th>
      <th>Picture</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @ideas.each do |idea| %>
      <tr>
        <td><%= idea.name %></td>
        <td><%= idea.description %></td>
        <td><%= image_tag(idea.picture_url, :width => 150, :class => "img-thumbnail") if idea.picture.present? %></td>
        <td><%= link_to 'Show', idea, :class => "btn btn-info btn-xs" %></td>
        <td><%= link_to 'Edit', edit_idea_path(idea), :class => "btn btn-warning btn-xs" %></td>
        <td><%= link_to 'Delete', idea, :class => "btn btn-danger btn-xs", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Song', new_idea_path, :class => "btn btn-success btn-block" %>
